{% extends 'base.html.twig' %}

{% block title %}Détail de l'employé n°
	{{ details.id }}
{% endblock %}
{% block body %}
	<style>
		table,
		th,
		td {
			border: 1px solid;
		}
	</style>
	<div class="container">

		<table class="table">
			<thead class="thead-dark">
				<tr>
					<th scope="col">Libellé</th>
					<th scope="col">Valeurs</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>Id</td>
					<td>{{ details.id }}</td>
				</tr>
				<tr>
					<td>Nom</td>
					<td>{{ details.getNom }}</td>
				</tr>
				<tr>
					<td>Prénom</td>
					<td>{{ details.getPrenom() }}</td>
				</tr>
				<tr>
					<td>Poste</td>
					<td>{{ details.getPoste }}</td>
				</tr>
				<tr>
					<td>Adresse</td>
					<td>{{ details.getAdresse() }}</td>
				</tr>
			</tbody>
		</table>
		<a href="/employe">Retourner à la liste des employés</a>
	</div>

{% endblock %}
{% block footer %}Détails de l'employé : "{{ details.getPrenom()}}"
{% endblock %}
