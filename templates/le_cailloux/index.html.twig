{% extends 'base.html.twig' %}

{% block title %}Liste des livres
{% endblock %}
{% block titrenavbar %}
	<h1>Liste complète des livres</h1>
{% endblock %}
{% block body %}
	<style>
		table,
		th,
		td {
			border: 1px solid;
		}
	</style>

	<div class="container">

		<table class="table">
			<thead class="thead-dark">
				<tr>
					<th scope="col">URL</th>
					<th scope="col">Description</th>
					<th scope="col">Catégorie</th>
				</tr>
			</thead>
			<tbody>
				{% for i in listeducailloux %}
					<tr>
						<td>{{ i.getUrl() }}</td>
						<td>{{ i.getDescription() }}</td>
						<td>
							{# <a href="/consulter/{{ l.getId() }}">Détails</a> #}
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>


{% endblock %}
{% block footer %}Liste des Livres
{% endblock %}
