{% extends 'base.html.twig' %}

{% block title %}Liste des auteurs
{% endblock %}
{% block body %}
	<style>
		table,
		th,
		td {
			border: 1px solid;
		}
	</style>

	<div class="container">
		<h2>Nombre total d'auteurs :
			{{ totalAuteurs }}</h2>
		<table class="table">
			<thead class="thead-dark">
				<tr>
					<th scope="col">Nom</th>
					<th scope="col">Prénom</th>
					<th scope="col">Détails</th>
				</tr>
			</thead>
			<tbody>
				{% for a in auteurs %}
					<tr>
						<td>{{ a.getNom() }}</td>
						<td>{{ a.getPrenom() }}</td>
						<td><a href="/modifier/auteur/{{ a.getid() }}">Details</a></td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

{% endblock %}
{% block footer %}Liste des Auteurs
{% endblock %}
